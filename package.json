{
  "name": "authql",
  "description": "Authentication with GraphQL using Apollo & Redux",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Bryan Stearns <bryanstearns@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/bryanstearns/authql-client.git"
  },
  "bugs": {
    "url": "https://github.com/bryanstearns/authql-client/issues"
  },
  "homepage": "https://github.com/bryanstearns/authql-client#readme",
  "scripts": {
    "build": "webpack --config webpack.config.babel.js",
    "release": "webpack --p --config webpack.config.babel.js",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "deploy": "",
    "lint": "eslint ./src"
  },
  "peerDependencies": {
    "react": "~0.14.8 || ^15.0.0",
    "react-dom": "~0.14.8 || ^15.0.0"
  },
  "dependencies": {
    "react": "^15.5.4"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.2",
    "babel-jest": "^19.0.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.16",
    "css-loader": "^0.28.0",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^6.10.3",
    "jest": "^19.0.2",
    "react-addons-test-utils": "^15.5.1",
    "react-apollo": "^1.4.14",
    "react-dom": "^15.5.4",
    "react-hot-loader": "next",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.1.2",
    "react-test-renderer": "^15.5.4",
    "reduxsauce": "^0.6.0",
    "style-loader": "^0.16.1",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.5"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ]
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/__tests__/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/src/__tests__/TestHelpers.js"
    ],
    "modulePaths": [
      "./src"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  }
}
